<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="4dp"
        android:backgroundTint="@color/white"
        tools:context=".activities.NoteActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <EditText
                android:id="@+id/note_title"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColorHint="@color/light_gray"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:background="@drawable/edit_text_bottom_border"
                android:hint="Title"/>
        <TextView
                android:id="@+id/note_created_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_gray"
                android:layout_gravity="center"
                android:text="Timestamp"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_prev_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:backgroundTint="@color/yellow"
                    android:contentDescription="previous note"
                    android:src="@drawable/ic_arrow_back"
                    android:layout_gravity="center"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_add_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:contentDescription="Add Note"
                    android:src="@drawable/ic_add"
                    android:layout_gravity="center"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_next_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="-0.5"
                    android:scaleY="0.5"
                    android:backgroundTint="@color/green"
                    android:contentDescription="Add Note"
                    android:visibility="visible"
                    android:src="@drawable/ic_arrow_back"
                    android:layout_gravity="center"/>

        </LinearLayout>

        <com.originb.inkwisenote.views.DrawingView
                android:id="@+id/drawing_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@android:color/white"
                android:layout_weight="5"
                android:padding="50dp"/>
<!--        <TextView-->
<!--                android:id="@+id/ocr_result"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="0dp"-->
<!--                android:layout_weight="1"-->
<!--                android:text="ocr result"-->
<!--                android:textColor="@color/black"/>-->
    </LinearLayout>

</androidx.cardview.widget.CardView>
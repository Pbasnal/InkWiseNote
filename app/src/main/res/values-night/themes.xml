<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InkWiseNote" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_dark</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Surface colors -->
        <item name="drawingSurface">@color/surface_light</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/on_surface_dark</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorOnBackground">@color/on_background_dark</item>
        
        <!-- Container colors -->
        <item name="colorPrimaryContainer">@color/primary_container_dark</item>
        <item name="colorOnPrimaryContainer">@color/on_primary_container_dark</item>
        <item name="colorSecondaryContainer">@color/secondary_container_dark</item>
        <item name="colorOnSecondaryContainer">@color/on_secondary_container_dark</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Primary surface color (combines primary and surface - in dark mode we prefer the surface color) -->
        <item name="colorPrimarySurface">@color/surface_dark</item>
        <item name="colorOnPrimarySurface">@color/on_surface_dark</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background_dark</item>
        
        <!-- Outline -->
        <item name="colorOutline">@color/card_stroke_dark</item>
        
        <!-- Custom attributes -->
        <item name="drawingSurface">@color/surface_light</item>
    </style>
</resources>
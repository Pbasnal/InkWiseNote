<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InkWiseNote" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Surface colors -->
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/on_surface_light</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorOnBackground">@color/on_background_light</item>
        <!-- Container colors -->
        <item name="colorPrimaryContainer">@color/primary_container_light</item>
        <item name="colorOnPrimaryContainer">@color/on_primary_container_light</item>
        <item name="colorSecondaryContainer">@color/secondary_container_light</item>
        <item name="colorOnSecondaryContainer">@color/on_secondary_container_light</item>
        <!-- Error colors -->
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Primary surface color (combines primary and surface) -->
        <item name="colorPrimarySurface">?attr/colorPrimary</item>
        <item name="colorOnPrimarySurface">?attr/colorOnPrimary</item>
        <!-- Outline -->
        <item name="colorOutline">@color/card_stroke_light</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
    </style>
</resources>